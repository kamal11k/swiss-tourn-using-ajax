<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="http://localhost:8000/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
<header class=" row">
        <div class="col-md-4 tour_name">
            <h2>Tournament Name:  {{tournament.name}}</h2>
        </div>
        <div class="col-md-4 tour_status">
            <h2>Status:  {{tournament.status}} </h2>
        </div>
        <div class="col-md-4 input-group-btn">
            <button class="btn btn-warning btn_start" type="submit">START</button>
        </div>
</header>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <input class="inputPname" placeholder="Enter Player Name" type="text" name="p_name" required>
            <button type="submit" class="btn btn-primary btn_addPlayer">Add Player</button>
        </div>
        <div class="row ">
            <div class="col-md-6 Players">
            {{#each players}}
                <li>{{name}}</li>
            {{/each}}
            </div>
            <div class="col-md-6 existings">
                <label><h4>Existing Players</h4></label>
                <select id="tick1" class="selectpicker">
                    {{#each ex_players}}
                        <option>{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-primary btn-primary :hover btn_addExPlayer">Add here</button>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <table class="table table-striped">
            <thead class="thead-inverse">
                <tr class="danger">
                    <th>Name</th>
                    <th>Matches</th>
                    <th>Wins</th>
                    <th>Losses</th>
                </tr>
            </thead>
            <tbody class="standing">
                {{#each standing}}
                    <tr>
                        <th>{{Name}}</th>
                        <td>{{Matches}}</td>
                        <td>{{Wins}}</td>
                        <td>{{Losses}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="row round_table">
    <div class="col-md-12">
        <table class="table table-striped ">
            <thead >
                <tr class="danger">
                    <th>Round</th>
                    <th>Status</th>
                    <th>Execute</th>
                    <th>Winner</th>
                </tr>
            </thead>
            <tbody class="round">
            </tbody>
        </table>
    </div>
</div>

